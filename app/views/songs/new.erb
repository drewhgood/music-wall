<h1 class="text-center"> Add a Song</h1>

<% if @errors %>
  <div id="errors">
      <% @errors.each do |e| %>
         <p><%= e %></p>
      <% end %>
  </div>
<% end %>

<% if @username %>

  <form action="/songs/new" method="post">
    <div class="form-group">
      <label>Author</label>
      <input type="text" name="title" class="form-control" placeholder="Enter Author">
    </div>

     <div class="form-group">
      <label>Title</label>
      <input type="text" name="author" class="form-control" placeholder="Enter Title">
    </div>

     <div class="form-group">
      <label>Link</label>
      <input type="text" name="url" class="form-control" placeholder="Enter Link (URL)">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
  </form>

<% else %>

  <div class="alert alert-warning alert-dismissible text-center" role="alert"> 
    <strong>Warning!</strong> You need to <a href="/users/login">login</a> or <a href="/users/new">register</a> before you permission to post songs.
  </div>

<% end %>