<h1 class="text-center"> Add a Song</h1>


<% if @username %>

<form action="/songs/new" method="post">
  <div class="form-group">
    <label>Author</label>
    <input type="text" name="title" class="form-control" placeholder="Enter Author">
  </div>

   <div class="form-group">
    <label>Title</label>
    <input type="text" name="author" class="form-control" placeholder="Enter Title">
  </div>

   <div class="form-group">
    <label>Link</label>
    <input type="text" name="url" class="form-control" placeholder="Enter Link (URL)">
